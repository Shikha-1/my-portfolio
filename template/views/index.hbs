<!DOCTYPE html>
<html lang="en">
{{>headerlinks}}
<body>
    {{>navbar}}
    <header>
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                <li data-target="#carousel-example-generic" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <div class="banner" style="background-image: url(/img/2.jpg);"></div>
                    <div class="carousel-caption">
                        <h2 class="animated slideInDown" style="animation-delay: 1s"><span>Shikha</span></h2>
                        <h3 class="animated fadeInUp" style="animation-delay: 2s">An Undergraduate Student</h3>
                        <p class="animated zoomIn" style="animation-delay: 3s"><a href="/about">Know More</a></p>
                    </div>
                </div>
                <div class="item">
                    <div class="banner" style="background-image: url(/img/1.jpg);"></div>
                    <div class="carousel-caption">
                        <h2 class="animated bounceInRight" style="animation-delay: 1s"><span>Shikha</span></h2>
                        <h3 class="animated bounceInLeft" style="animation-delay: 2s">A Learner</h3>
                        <p class="animated bounceInRight" style="animation-delay: 3s"><a href="/about">Know More</a></p>
                    </div>
                </div>
                <div class="item">
                    <div class="banner" style="background-image: url(/img/3.jpg);"></div>
                    <div class="carousel-caption">
                        <h2 class="animated zoomIn" style="animation-delay: 1s"><span>Shikha</span></h2>
                        <h3 class="animated fadeInLeft" style="animation-delay: 2s">A Web Developer</h3>
                        <p class="animated zoomIn" style="animation-delay: 3s"><a href="/about">Know More</a></p>
                    </div>
                </div>
            </div>

            <!-- Controls -->
            <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

    </header>
    {{>footerlinks}}
</body>
</html>
